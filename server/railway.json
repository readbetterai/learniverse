{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npx prisma generate --schema=server/prisma/schema.prisma",
    "watchPatterns": [
      "server/**",
      "types/**",
      "package.json"
    ]
  },
  "deploy": {
    "startCommand": "cd server && npx prisma migrate deploy --schema=prisma/schema.prisma && ts-node --project tsconfig.server.json --transpile-only index.ts",
    "healthcheckPath": "/colyseus",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
